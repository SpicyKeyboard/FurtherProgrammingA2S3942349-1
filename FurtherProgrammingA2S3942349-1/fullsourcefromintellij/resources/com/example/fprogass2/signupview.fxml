<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="253.0" prefWidth="358.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fprogass2.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" text="Enter Your Login Details" />
    <HBox alignment="CENTER" prefHeight="18.0" prefWidth="318.0">
        <children>
            <Label prefHeight="42.0" prefWidth="126.0" text="Username:" />
            <TextField fx:id="textusername" accessibleRole="TEXT" prefHeight="0.0" prefWidth="194.0" promptText="Enter your username here" />
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="137.0" prefHeight="18.0" prefWidth="318.0">
        <children>
            <Label prefHeight="42.0" prefWidth="126.0" text="Password:" />
            <TextField fx:id="textpassword" accessibleRole="PASSWORD_FIELD" prefHeight="0.0" prefWidth="194.0" promptText="Enter your password here" />
        </children>
    </HBox>
   <HBox alignment="CENTER" prefHeight="18.0" prefWidth="318.0">
      <children>
         <Label prefHeight="42.0" prefWidth="126.0" text="First Name:" />
         <TextField fx:id="textfirstname" accessibleRole="TEXT" prefHeight="0.0" prefWidth="194.0" promptText="Enter your first name here" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="18.0" prefWidth="318.0">
      <children>
         <Label prefHeight="42.0" prefWidth="126.0" text="Last Name:" />
         <TextField fx:id="textlastname" accessibleRole="TEXT" prefHeight="0.0" prefWidth="194.0" promptText="Enter your last name here" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="18.0" prefWidth="318.0">
      <children>
         <Label prefHeight="42.0" prefWidth="126.0" text="Student Number:" />
         <TextField fx:id="textstudentnumber" accessibleRole="TEXT" prefHeight="0.0" prefWidth="194.0" promptText="Enter your student number here" />
      </children>
   </HBox>
    <Button fx:id="createaccountbutton" mnemonicParsing="false" onAction="#onCreateAccountClicked" text="Create Account" />
   <Label fx:id="errorlabel" alignment="CENTER" prefHeight="15.0" prefWidth="275.0" textFill="RED">
      <font>
         <Font name="System Bold" size="10.0" />
      </font>
   </Label>
</VBox>
